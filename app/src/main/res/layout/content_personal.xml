<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.inbar.heimdall.MainActivity"
    tools:showIn="@layout/app_bar_personal">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_personal"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="190dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text=" אחוז התאמה לפי"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#727272" />

                <Spinner
                    android:id="@+id/tagp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textColor="#212121" />

            </RelativeLayout>

            <include layout="@layout/item_divider_main_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="התאמה למפלגה"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#727272" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1p"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="450dp" />

            </RelativeLayout>

            <include layout="@layout/item_divider_main" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id = "@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="אחוז התאמה לפי חבר כנסת"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#727272" />

                <!--<Spinner-->
                    <!--android:id="@+id/tagp2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="@dimen/activity_horizontal_margin"-->
                    <!--android:textColor="#212121" />-->

                <AutoCompleteTextView
                    android:layout_marginTop="50dp"
                    android:hint="בחר חבר כנסת"
                    android:theme="@style/Autocomplete"
                    android:id="@+id/tagp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textColor="#212121" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="אחוז התאמה לפי"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#727272" />

                <Spinner
                    android:id="@+id/tagp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textColor="#212121" />

            </RelativeLayout>

            <include layout="@layout/item_divider_main_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="התאמה לחבר כנסת"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#727272" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="120dp"
                    android:id="@+id/no_data"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:layout_anchorGravity="center"
                    android:textSize="15dp"
                    android:text="אין מידע להציג"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#727272" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart2p"
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="200dp" />

            </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/img_arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="5dp"
        android:src="@drawable/arrow"
        app:layout_anchorGravity="bottom|center|end"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/img_arrow_up2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_margin="5dp"
        android:src="@drawable/up_arrow"
        android:visibility="gone"
        app:layout_anchorGravity="top|center|end"/>

</android.support.design.widget.CoordinatorLayout>
